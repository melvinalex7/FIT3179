{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "World Happiness Report (2015 - 2019)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/melvinalex7/FIT3179/main/Assignment_2/data/Happiness_Report_Dataset_Cleaned.csv"
  },

  "projection": {"type": "equirectangular"},
  "params": [
  {
  "name": "year_selection",
  "bind": {
  "input": "select",
    "options": [
    "null",
    "2015",
    "2016",
    "2017",
    "2018",
    "2019" 
    ],
    "labels":[
    "Select Year",
    "2015",
    "2016",
    "2017",
    "2018",
    "2019"
    ],
    "name": "Survey Year: "
    }
  }
],      
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/melvinalex7/FIT3179/main/Assignment_2/ne_110m_admin_0_countries.json",
          "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
        },
        "key": "properties.NAME"        
      },
      "as": "geo"
    },
    { "filter": "datum.Year == year_selection"}
  ],
  "mark": {"type": "geoshape", "stroke": "white"},
  "encoding": {
    "shape": {"field": "geo", "type": "geojson"},
    "color": {
      "field": "Happiness_Score",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "legend": {"format": ".2s", "title": "Happiness Score"}
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Happiness_Score", "type": "quantitative", "title": "Happiness Score"}
    ]
  }
}